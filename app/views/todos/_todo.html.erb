<!-- Rails 提供的 remote: true 只能使用在超連結和表單上，如果是這兩種情況以外的需求，就需要自行綁定事件來發送 AJAX 請求。 -->

<!-- checkbox -->
<td class="my-pointer">
  <%= link_to toggle_check_todo_path(todo), id: "todo-check-#{todo.id}", remote: true, method: :post do %>
  <!-- 加上 remote: true 字樣表示使用非同步請求 -->
    <% if todo.done? %>
      <span class="my-font glyphicon glyphicon-check"></span>
    <% else %>
      <span class="my-font glyphicon glyphicon-unchecked"></span>
    <% end %>
  <% end %>
</td>

<!-- todo-text -->
<td>
  <p id="todo-title-<%= todo.id %>" class="title my-font">
    <%= todo.title %>
  </p>
</td>

<!-- button of edit and delete -->
<td class="my-operation">
  <%= link_to edit_todo_path(todo), remote: true do %>
  <!-- 加上 remote: true 字樣表示使用非同步請求 -->
    <span class="my-btn my-btn-transparent text-info glyphicon glyphicon-pencil"></span>
  <% end %>
  <%= link_to todo_path(todo), remote: true, method: :delete do %>
  <!-- 加上 remote: true 字樣表示使用非同步請求 -->
    <span class="my-btn my-btn-transparent text-danger glyphicon glyphicon-trash"></span>
  <% end %>
</td>
